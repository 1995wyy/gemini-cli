{
  "name": "gemini-cli-vscode",
  "displayName": "Gemini CLI for VS Code",
  "description": "Deep VS Code integration for Gemini CLI - AI-powered coding assistant",
  "version": "0.1.0",
  "publisher": "gemini-cli",
  "private": true,
  "license": "Apache-2.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/google-gemini/gemini-cli"
  },
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "AI",
    "Programming Languages",
    "Other"
  ],
  "keywords": [
    "gemini",
    "ai",
    "assistant",
    "copilot",
    "code-generation"
  ],
  "activationEvents": [
    "*"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "gemini.test",
        "title": "Gemini: Test Command",
        "category": "Gemini CLI"
      },
      {
        "command": "gemini.testMCP",
        "title": "Gemini: Test MCP Server",
        "category": "Gemini CLI"
      },
      {
        "command": "gemini.startSession",
        "title": "Gemini: Start CLI Session",
        "category": "Gemini CLI"
      },
      {
        "command": "gemini.launchWithContext",
        "title": "Gemini: Launch with Current File Context",
        "category": "Gemini CLI"
      },
      {
        "command": "gemini.sendSelection",
        "title": "Gemini: Send Selected Text",
        "category": "Gemini CLI"
      },
      {
        "command": "gemini.showCommandPalette",
        "title": "Gemini: Show Command Palette",
        "category": "Gemini CLI"
      },
      {
        "command": "gemini.showServerStatus",
        "title": "Gemini: Show Server Status",
        "category": "Gemini CLI"
      },
      {
        "command": "gemini.explainCode",
        "title": "Gemini: Explain Code",
        "category": "Gemini CLI",
        "icon": "$(file-code)"
      },
      {
        "command": "gemini.generateTests",
        "title": "Gemini: Generate Tests",
        "category": "Gemini CLI",
        "icon": "$(beaker)"
      },
      {
        "command": "gemini.refactorCode",
        "title": "Gemini: Refactor Code",
        "category": "Gemini CLI",
        "icon": "$(tools)"
      },
      {
        "command": "gemini.addDocumentation",
        "title": "Gemini: Add Documentation",
        "category": "Gemini CLI",
        "icon": "$(book)"
      },
      {
        "command": "gemini.fixIssues",
        "title": "Gemini: Fix Issues",
        "category": "Gemini CLI",
        "icon": "$(bug)"
      },
      {
        "command": "gemini.analyzeFile",
        "title": "Gemini: Analyze File",
        "category": "Gemini CLI",
        "icon": "$(search)"
      },
      {
        "command": "gemini.generateTestsForFile",
        "title": "Gemini: Generate Tests for File",
        "category": "Gemini CLI",
        "icon": "$(beaker)"
      },
      {
        "command": "gemini.openInGemini",
        "title": "Gemini: Open in Gemini CLI",
        "category": "Gemini CLI",
        "icon": "$(terminal)"
      },
      {
        "command": "gemini.sendQuery",
        "title": "Gemini: Send Query",
        "category": "Gemini CLI",
        "icon": "$(send)"
      },
      {
        "command": "gemini.showQuickInput",
        "title": "Gemini: Quick Input",
        "category": "Gemini CLI",
        "icon": "$(edit)"
      },
      {
        "command": "gemini.showQuickQuery",
        "title": "Gemini: Quick Query",
        "category": "Gemini CLI",
        "icon": "$(search)"
      },
      {
        "command": "gemini.showTokenUsage",
        "title": "Gemini: Show Token Usage",
        "category": "Gemini CLI",
        "icon": "$(dashboard)"
      },
      {
        "command": "gemini.showTerminal",
        "title": "Gemini: Show Terminal",
        "category": "Gemini CLI",
        "icon": "$(terminal)"
      },
      {
        "command": "gemini.reconnect",
        "title": "Gemini: Reconnect Server",
        "category": "Gemini CLI",
        "icon": "$(sync)"
      }
    ],
    "keybindings": [
      {
        "command": "gemini.launchWithContext",
        "key": "ctrl+alt+g",
        "mac": "cmd+alt+g",
        "when": "editorTextFocus"
      },
      {
        "command": "gemini.sendSelection",
        "key": "ctrl+shift+alt+g",
        "mac": "cmd+shift+alt+g",
        "when": "editorHasSelection"
      },
      {
        "command": "gemini.showCommandPalette",
        "key": "ctrl+k g",
        "mac": "cmd+k g"
      },
      {
        "command": "gemini.showQuickQuery",
        "key": "ctrl+shift+space",
        "mac": "cmd+shift+space",
        "when": "editorTextFocus"
      }
    ],
    "menus": {
      "editor/context": [
        {
          "submenu": "gemini.editorSubmenu",
          "group": "gemini",
          "when": "editorTextFocus"
        }
      ],
      "explorer/context": [
        {
          "submenu": "gemini.explorerSubmenu",
          "group": "gemini"
        }
      ],
      "gemini.editorSubmenu": [
        {
          "command": "gemini.launchWithContext",
          "group": "1_launch@1"
        },
        {
          "command": "gemini.sendSelection",
          "group": "1_launch@2",
          "when": "editorHasSelection"
        },
        {
          "command": "gemini.explainCode",
          "group": "2_actions@1"
        },
        {
          "command": "gemini.generateTests",
          "group": "2_actions@2"
        },
        {
          "command": "gemini.refactorCode",
          "group": "2_actions@3"
        },
        {
          "command": "gemini.addDocumentation",
          "group": "3_documentation@1"
        },
        {
          "command": "gemini.fixIssues",
          "group": "4_fix@1"
        }
      ],
      "gemini.explorerSubmenu": [
        {
          "command": "gemini.analyzeFile",
          "group": "1_analyze@1"
        },
        {
          "command": "gemini.generateTestsForFile",
          "group": "1_analyze@2"
        },
        {
          "command": "gemini.openInGemini",
          "group": "2_open@1"
        }
      ],
      "editor/title": [
        {
          "command": "gemini.launchWithContext",
          "group": "navigation",
          "when": "resourceExtname =~ /\\.(js|jsx|ts|tsx|py|java|go|rs|c|cpp|cs)$/"
        }
      ],
      "editor/title/context": [
        {
          "command": "gemini.explainCode",
          "group": "1_gemini@1"
        },
        {
          "command": "gemini.generateTests",
          "group": "1_gemini@2"
        }
      ]
    },
    "submenus": [
      {
        "id": "gemini.editorSubmenu",
        "label": "Gemini CLI",
        "icon": "$(sparkle)"
      },
      {
        "id": "gemini.explorerSubmenu",
        "label": "Gemini CLI",
        "icon": "$(sparkle)"
      }
    ],
    "configuration": {
      "title": "Gemini CLI",
      "properties": {
        "gemini.enabled": {
          "type": "boolean",
          "default": true,
          "description": "Enable Gemini CLI integration"
        },
        "gemini.autoConnect": {
          "type": "boolean",
          "default": true,
          "description": "Automatically connect to Gemini CLI when VS Code starts"
        },
        "gemini.mcpServer.port": {
          "type": ["string", "number"],
          "default": "auto",
          "description": "MCP server port (use 'auto' for automatic assignment)"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test",
    "package": "vsce package",
    "publish": "vsce publish"
  },
  "devDependencies": {
    "@types/glob": "^8.1.0",
    "@types/mocha": "^10.0.6",
    "@types/node": "20.x",
    "@types/sinon": "^17.0.3",
    "@types/vscode": "^1.85.0",
    "@typescript-eslint/eslint-plugin": "^6.15.0",
    "@typescript-eslint/parser": "^6.15.0",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.4.1",
    "@vscode/vsce": "^3.2.1",
    "eslint": "^8.56.0",
    "glob": "^8.1.0",
    "mocha": "^10.2.0",
    "sinon": "^17.0.1",
    "typescript": "^5.3.3"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.0.0"
  }
}